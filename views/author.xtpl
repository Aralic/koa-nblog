{{extend ("./base")}}
{{#block ("head")}}
{{/block}}

{{#block ("body")}}
<section class="center-block" style="width: 60%">
    {{#each(articles)}}
    <li>
        <h4><a href="/article/{{_id}}">{{title}}</a></h4>
        <p>{{content}}</p>
        <blockquote class="blockquote-reverse">
            <span><a href="">{{author}}</a>  发布于 </span>
            <em>{{formateTime(updatadate)}}</em>
        </blockquote>
    </li>
    {{/each}}
</section>
{{/block}}
